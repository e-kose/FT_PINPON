{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification service with WebSocket support",
  "license": "ISC",
  "author": "soksak",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "start:dev": "nodemon --watch src --ext ts --exec tsx src/app.ts",
    "start:prod": "NODE_ENV=production node dist/app.js",
